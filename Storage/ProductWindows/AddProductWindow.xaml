<Window x:Class="Storage.ProductWindows.AddProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Storage.ProductWindows"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="AddProductWindow" MinHeight="450" MaxHeight="450" MaxWidth="350" MinWidth="350">
    <Grid>
        <StackPanel Margin="10,20">
            <TextBox x:Name="NameTextBox" materialDesign:HintAssist.Hint="Наименование" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Width="120"/>
            <TextBox x:Name="CostTextBox" materialDesign:HintAssist.Hint="Цена" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Width="120"/>
            <Button x:Name="AddButton" Click="AddButton_OnClick" Margin="50, 20">Добавить</Button>
        </StackPanel>
    </Grid>
</Window>
